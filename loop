- name: first play with loop
  hosts: servers
  tasks:
    - name: "installing packages on target machines using loop"
      apt: name="{{ item }}" state=present
      with_items:
        - vsftpd
        - apache2
    - name: "starting the services"
      service: name = "{{ item }}" state = started
      with_items:
        - vsftpd
        - apache2




